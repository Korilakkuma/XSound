root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[{*.html, *.css, *.js}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{package.json, .babelrc, .eslintrc, .stylelintrc}]
indent_style = space
indent_size = 2
