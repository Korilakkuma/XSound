{
  "name": "xsound",
  "version": "2.20.0",
  "engines": {
    "node": ">=10.19.0 <12.0.0"
  },
  "description": "Web Audio API Library for Synthesizer, Effects, Visualization, Multi-Track Recording, Audio Streaming, Visual Audio Sprite ... etc",
  "main": "build/xsound.js",
  "scripts": {
    "clean": "rm -rf build",
    "lint": "eslint src test",
    "fix": "eslint --fix src test",
    "build": "npm run clean && NODE_ENV=production webpack --progress --mode production",
    "watch": "npm run clean && webpack --progress --watch",
    "dev": "webpack-dev-server --progress",
    "test": "npm run lint && karma start",
    "changelog": "generate-changelog",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'chore: Updated CHANGELOG' && npm version patch && git push && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'chore: Updated CHANGELOG' && npm version minor && git push && git push origin --tags",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'chore: Updated CHANGELOG' && npm version major && git push && git push origin --tags",
    "prepublish": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Korilakkuma/XSound.git"
  },
  "keywords": [
    "XSound",
    "JavaScript",
    "Web Audio API",
    "Web Audio",
    "Web Audio API Library",
    "Web Audio Library"
  ],
  "author": "Korilakkuma <rilakkuma.san.xjapan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Korilakkuma/XSound/issues"
  },
  "homepage": "https://xsound.jp/",
  "files": [
    "build",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.7",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.14.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "generate-changelog": "^1.8.0",
    "husky": "^4.3.0",
    "jasmine": "^3.6.3",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^4.0.1",
    "karma-webpack": "dev",
    "lint-staged": "^10.5.1",
    "webpack": "^5.6.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
